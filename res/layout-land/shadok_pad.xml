<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/shadokPad"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:orientation="vertical"
              android:layout_gravity="center"
              >

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        >
        <eu.ttbox.gabuzomeu.ColorButton
            android:id="@+id/digitZo"
            android:text="@string/digitZo"
            style="@style/button_small_style"
            android:contentDescription="@string/digitNameZo"
            />
        <eu.ttbox.gabuzomeu.ColorButton
            android:id="@+id/digitMeu"
            android:text="@string/digitMeu"
            style="@style/button_small_style"
            android:contentDescription="@string/digitNameMeu"
            />
       <eu.ttbox.gabuzomeu.ColorButton
            android:id="@+id/plus"
            android:text="@string/plus"
            style="@style/button_style"
            android:contentDescription="@string/plusDesc"
            />
         <eu.ttbox.gabuzomeu.ColorButton
            android:id="@+id/minus"
            android:text="@string/minus"
            style="@style/button_style"
            android:contentDescription="@string/minusDesc"
            />
        <eu.ttbox.gabuzomeu.ColorButton
            android:id="@+id/mul"
            android:text="@string/mul"
            style="@style/button_style"
            android:contentDescription="@string/mulDesc"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        >
        <eu.ttbox.gabuzomeu.ColorButton
            android:id="@+id/digitGa"
            android:text="@string/digitGa"
            style="@style/button_small_style"
            android:contentDescription="@string/digitNameGa"
            />
        <eu.ttbox.gabuzomeu.ColorButton
            android:id="@+id/digitBu"
            android:text="@string/digitBu"
            style="@style/button_small_style"
            android:contentDescription="@string/digitNameBu"
            />
       <eu.ttbox.gabuzomeu.ColorButton
            android:id="@+id/dot"
            android:text="@string/dot"
            style="@style/digit_button_style"
            android:contentDescription="@string/dotDesc"
            />
       <eu.ttbox.gabuzomeu.ColorButton
            android:id="@+id/div"
            android:text="@string/div"
            style="@style/button_style"
            android:contentDescription="@string/divDesc"
            />
        <eu.ttbox.gabuzomeu.ColorButton
            android:id="@+id/equal"
            android:text="@string/equal"
            style="@style/button_style"
            android:contentDescription="@string/equalDesc"
            />
    </LinearLayout>
</LinearLayout>
